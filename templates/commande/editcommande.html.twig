{% extends 'baseBack.html.twig' %}

{% block title %}Edit Commande{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Button styling */
        .btn {
            display: inline-block;
            padding: 8px 16px;
            font-size: 14px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s;
            text-decoration: none; /* Remove underline for anchor tags */
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #fff;
        }

        /* Hover effect */
        .btn:hover {
            background-color: #0056b3;
        }

        /* Add margin between buttons */
        .button-container .btn {
            margin-right: 10px;
        }
    </style>
{% endblock %}

{% block AabiElWest %}
    <h1>Edit Commande</h1>

    <form id="commande_edit_form" method="post" action="{{ path('Commande_update', {'id': commande.idCommande}) }}">
        {{ include('commande/_form.html.twig', {'button_label': 'Enregistrer', 'commande': commande}) }}
        <a href="{{ path('afficher_commande') }}" class="btn btn-secondary">Retour</a>
    </form>
{% endblock %}
