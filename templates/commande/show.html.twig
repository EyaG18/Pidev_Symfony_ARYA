{% extends 'base.html.twig' %}

{% block title %}Détails de la commande{% endblock %}

{% block body %}
    <h1>Détails de la commande</h1>
    <table>
        <tr>
            <th>Référence Commande</th>
            <td>{{ commande.reference }}</td>
        </tr>
        <tr>
            <th>Client</th>
            <td>{{ commande.idUser.nomuser }} {{ commande.idUser.prenomuser }}</td>
        </tr>
        <tr>
            <th>Email Client</th>
            <td>{{ commande.idUser.emailusr }}</td>
        </tr>
        <tr>
            <th>Date commande</th>
            <td>{{ commande.dateCom|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Livrable</th>
            <td>{{ commande.livrable ? 'Oui' : 'Non' }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ commande.status }}</td>
        </tr>
        <!-- Add more details as needed -->
    </table>
    <a href="{{ path('afficher_commande') }}">Retour à la liste des commandes</a>
    <a href="{{ path('show_commande', {'idPanier': commande.idPanier}) }}">View Commande</a>

{% endblock %}
