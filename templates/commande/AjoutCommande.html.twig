<form method="POST">


  <h1>Commande</h1>
      <h2>Produits sélectionnés</h2>
      <ul class="product-list" id="productList">
        <!-- Les produits sélectionnés seront affichés ici -->
        <ul>
            {% set totalPrice = 0 %} {# Initialize total price variable #}
            {% for panier in paniers %}
                <li>
                    <div class="product-details">
                        <div class="product-info">
                            <span class="product-name">{{ panier.getIdProduit().getNomp() }}</span>
                            <span class="product-quantity">Quantité : {{ panier.getQuantiteparproduit() }}</span>
                            <span class="product-price">Prix unitaire : {{ panier.getIdProduit().getPrixp() }} Dt</span>
                        </div>
                    </div>
                    <!-- Calculate and accumulate total price for each item -->
                    {% set totalPrice = totalPrice + (panier.getQuantiteparproduit() * panier.getIdProduit().getPrixp()) %}
                </li>
            {% endfor %}
        </ul>
        
        <!-- Display total price after the loop -->
        <div class="total-price">
            <h2>Prix total: {{ totalPrice }} Dt</h2>
        </div>


      </ul>    
      <!-- Informations client -->
      <div class="form-group row">
          <div class="col-md-6">
              <label for="input_nom">Nom</label>
              <!-- Pre-fill the input field with user's last name -->
              <input type="text" id="input_nom" name="nom" class="form-control" value="{{ user.getNomuser() }}" required>
          </div>
          <div class="col-md-6">
              <label for="input_entreprise">Prénom</label>
              <!-- Pre-fill the input field with user's first name -->
              <input type="text" id="input_entreprise" name="entreprise" class="form-control" value="{{ user.getPrenomuser() }}">
          </div>
      </div>
      
      <div class="form-group row">
          <div class="col-md-6">
              <label for="input_telephone">Numéro de téléphone</label>
              <!-- Pre-fill the input field with user's telephone number -->
              <input type="tel" id="input_telephone" name="telephone" class="form-control" value="{{ user.getNumtel() }}">
          </div>
          <div class="col-md-6">
              <label for="input_email">Email</label>
              <!-- Pre-fill the input field with user's email -->
              <input type="email" id="input_email" name="email" class="form-control" value="{{ user.getEmailusr() }}">
          </div>
      </div>
     
            <!-- Livraison Options -->
            <div class="form-group">
              <label>Mode de livraison</label>
              <div class="livraison-option">
                <input type="radio" id="retrait_magasin" name="livraison_mode" value="retrait_magasin" checked>
                <label for="retrait_magasin">Retrait en Magasin <span>(Gratuit)</span></label>
              </div>
              <div class="livraison-option">
                <input type="radio" id="livraison_domicile" name="livraison_mode" value="livraison_domicile">
                <label for="livraison_domicile">Livraison à Domicile <span>(Frais supplémentaires)</span></label>
              </div>
            </div>
          
            <!-- Payment Input (Shown when Livraison à Domicile is selected) -->
            <div class="payment-inputs" style="display: none;">
              <div class="form-group row">
                <div class="col-md-6">
                    <label for="input_telephone">Addresse</label>
                    <input type="tel" id="input_telephone" name="telephone" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="input_email">Code postal</label>
                    <input type="email" id="input_email" name="email" class="form-control">
                </div>
                
                
            </div>
                <div class="form-group">
                    <label for="input_card_number">Numéro de carte:</label>
                    <input type="text" id="input_card_number" name="card_number" required pattern="[0-9]{16}" title="Veuillez saisir un numéro de carte valide (16 chiffres).">
                </div>
                <div class="col-md-6">
                    <label for="input_card_holder">Titulaire de la carte:</label>
                    <input type="text" id="input_card_holder" name="card_holder" required>
                </div>
                <div class="col-md-6">
                    <label for="input_exp_date">Date d'expiration (MM/YY):</label>
                    <input type="text" id="input_exp_date" name="exp_date" required pattern="(0[1-9]|1[0-2])\/([0-9]{2})" title="Veuillez saisir une date d'expiration valide (MM/YY).">
                </div>
                <div class="col-md-6">
                    <label for="input_cvv">CVV:</label>
                    <input type="text" id="input_cvv" name="cvv" required pattern="[0-9]{3,4}" title="Veuillez saisir un code CVV valide (3 ou 4 chiffres).">
                </div>
            </div>
            
          
            <!-- Notes/Instructions -->
            <div class="form-group">
              <label for="input_notes">Notes/Instructions:</label>
              <textarea id="input_notes" name="notes"></textarea>
            </div>
          
            <!-- Submit Buttons -->
            <div class="form-group">
              <button type="button" class="form-submit-print">Imprimer la facture</button>
                           
        
              <a href="{{ path('add_commande', {'userId': userId}) }}" class="btn btn-primary">Confirmer</a>
            </div>
          </form>
          
        <script>
          
            // Event listener for livraison_mode radio buttons
            document.querySelectorAll('input[name="livraison_mode"]').forEach(function(radio) {
              radio.addEventListener('change', function() {
                const paymentInputs = document.querySelector('.payment-inputs');
                if (this.value === 'livraison_domicile') {
                  paymentInputs.style.display = 'block';
                } else {
                  paymentInputs.style.display = 'none';
                }
              });
            });
          </script>
          {% endblock %}