{% extends 'baseFront.html.twig' %}

{% block stylesheets %}
	{{ parent() }}

	<style>
		.wrapper {
			display: grid;
			grid-template-columns: repeat(4, 1fr);
			grid-gap: 30px;
		}
		.product-item {
			background-color: #F0F8FF;
			padding: 20px;
			border-radius: 10px;
			text-align: center;
			border: 2px solid black;
			margin-left: 20px;
			margin-right: 20px;
		}
		.product-item img {
			max-width: 100%;
			height: auto;
		}
		.product-details {
			background-color: #F0F8FF;
			padding: 20px;
			border-radius: 10px;
			text-align: center;
			border: 2px solid black;
			margin-left: 20px;
			margin-right: 20px;
		}
		.product-price {
			font-weight: bold;
		}
		.add-to-cart {
			background-color: #ff69b4;
			color: white;
			border: none;
			padding: 10px 20px;
			border-radius: 20px;
			cursor: pointer;
		}
		.add-to-cart:hover {
			background-color: #ff3385;
		}
		.spinner {
			border: 4px solid rgba(0, 0, 0, 0.1);
			border-top: 4px solid #ff69b4;
			border-radius: 50%;
			width: 20px;
			height: 20px;
			animation: spin 1s linear infinite;
		}

		@keyframes spin {
			0% {
				transform: rotate(0deg);
			}
			100% {
				transform: rotate(360deg);
			}
		}
	</style>
{% endblock %}

{% block AabiElWest1 %}
	<div class="fashion_section">
		<div class="background-colour">
			<div class="wrapper">
				<div class="product-details">
					<img class="product-image" src="{{ asset('uploadsProduit/' ~ product.ImageP) }}" alt="Image du produit">
					<h3>{{ product.NomP }}</h3>
					<p class="product-price">Prix :
						{{ product.PrixP }}
						DT</p>

					<input type="number" min="1" value="1" id="quantity">

					<button class="add-to-cart">Ajouter au panier</button>
					<div class="spinner"></div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
