{% extends 'baseBack.html.twig' %}

{% block stylesheets %}
	{{ parent() }}

	<style>
		.wrapper {
			display: grid;
			grid-template-columns: repeat(4, 1fr);
			grid-gap: 30px;
		}
		.product-item {
			background-color: #F0F8FF;
			padding: 20px;
			border-radius: 10px;
			text-align: center;
			border: 2px solid black;
			margin-left: 20px;
			margin-right: 20px;
		}
		.product-item img {
			max-width: 100%;
			height: auto;
		}
		.product-details {
			background-color: #F0F8FF;
			padding: 20px;
			border-radius: 10px;
			text-align: center;
			border: 2px solid black;
			margin-left: 20px;
			margin-right: 20px;
		}
		.product-price {
			font-weight: bold;
		}
		.add-to-cart {
			background-color: #ff69b4;
			color: white;
			border: none;
			padding: 10px 20px;
			border-radius: 20px;
			cursor: pointer;
		}
		.add-to-cart:hover {
			background-color: #ff3385;
		}
		.spinner {
			border: 4px solid rgba(0, 0, 0, 0.1);
			border-top: 4px solid #ff69b4;
			border-radius: 50%;
			width: 20px;
			height: 20px;
			animation: spin 1s linear infinite;
		}

		@keyframes spin {
			0% {
				transform: rotate(0deg);
			}
			100% {
				transform: rotate(360deg);
			}
		}
	</style>
{% endblock %}

{% block AabiElWest %}
	<div
		class="container-fluid">
		<!-- Afficher le message flash -->
		{% for message in app.flashes('success') %}
			<div class="alert alert-success" role="alert">
				{{ message }}
			</div>
		{% endfor %}
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Liste des Reclamation</h6>
			</div>
			<div class="card-body">
				<h5 class="title text-center mb-3">Ajouter Une RÃ©servation</h5>
				{# Ajouter la classe text-center pour centrer le texte #}
				<div class="form-group">
					{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}
					) }}
					{% if form_errors(form) %}
						<div class="alert alert-danger">
							{{ form_errors(form) }}
						</div>
					{% endif %}


					<div class="form-group">
						{{ form_label(form.reponse) }}
						{{ form_widget(form.reponse, { 'attr': {'class': 'form-control'} }) }}
						{% if form_errors(form.reponse) %}
							<div class="invalid-feedback">{{ form_errors(form.reponse) }}</div>
						{% endif %}
					</div>


					<button type="submit" class="btn btn-primary">Save</button>
					<a href="{{ path('app_consulterReclamationBack') }}" class="btn btn-secondary">Cancel</a>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
