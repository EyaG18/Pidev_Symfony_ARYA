
{% extends 'baseBack.html.twig' %}

{% block AabiElWest %}
<div class="container-fluid">
  <!-- Afficher le message flash -->
    {% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
    {% endfor %}
    <div class="card shadow mb-4">
       <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <div>
            <h6 class="m-0 font-weight-bold text-primary">Liste des Catégories</h6>
        </div>
        <div>
         <button type="button" class="btn btn-primary" onclick="openAddCategoryInterface()">
        Ajouter une Catégorie
    </button>
        </div>
    </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Référence Catégorie</th>
                            <th>Nom Catégorie</th>
                            <th>Modifier</th>
                            <th>Supprimer</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for a in cat %}
                        <tr>
                            <td>{{ a.Id_Categorie }}</td>
                            <td>{{ a.NomCategorie }}</td>

                            <td>

  <a href="{{ path('edit_category', {'id': a.Id_Categorie}) }}" class="btn btn-success">Modifier</a>

</td>

                            <td>
                                  <form action="{{ path('category_delete', {'id':a.Id_Categorie}) }}" method="post">
                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                 </form>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="9">No Record Found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<script>
    function openAddCategoryInterface() {
        window.location.href = "{{ path('AddCategory') }}";
    }
</script>

{% endblock %}


